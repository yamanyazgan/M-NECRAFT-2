index.html
<!DOCTYPE html>
<html lang="tr">
<head>
  <meta charset="UTF-8">
  <title>M-NECRAFT</title>
  <script src="https://cdn.jsdelivr.net/npm/p5@1.9.0/lib/p5.min.js"></script>
  <style>
    body { margin:0; overflow:hidden; background:#222; }
  </style>
</head>
<body>
<script>
let p={x:0,y:0,z:0,vz:0,s:5,dir:1,step:0};
let cx=0,cy=0;

function setup(){
  createCanvas(windowWidth,windowHeight);
}

function draw(){
  background(90,180,90);

  cx=p.x-width/2;
  cy=p.y-height/2;

  push();
  translate(-cx,-cy);

  stroke(70,160,70);
  for(let x=-2000;x<2000;x+=100) line(x,-2000,x,2000);
  for(let y=-2000;y<2000;y+=100) line(-2000,y,2000,y);

  let m=false;
  if(keyIsDown(65)||keyIsDown(37)){p.x-=p.s;p.dir=-1;m=true;}
  if(keyIsDown(68)||keyIsDown(39)){p.x+=p.s;p.dir=1;m=true;}
  if(keyIsDown(87)||keyIsDown(38)){p.y-=p.s;m=true;}
  if(keyIsDown(83)||keyIsDown(40)){p.y+=p.s;m=true;}
  if(m)p.step+=0.15; else p.step=0;

  p.z+=p.vz;
  if(p.z>0)p.vz-=0.8;
  else{p.z=0;p.vz=0;}
  if(keyIsDown(32)&&p.z==0)p.vz=12;

  noStroke();
  fill(0,0,0,70);
  ellipse(p.x,p.y,40-p.z/6);

  let yy=p.y-p.z;
  let leg=sin(p.step)*6;

  push();
  translate(p.x,yy);
  scale(p.dir,1);

  fill(70);
  rect(-10+leg,-5,8,22,4);
  rect(2-leg,-5,8,22,4);

  fill(90,130,220);
  rect(-14,-40,28,30,6);

  fill(255,220,180);
  rect(-12,-65,24,25,6);

  fill(0);
  ellipse(-5,-55,4);
  ellipse(5,-55,4);
  rect(-4,-48,8,3,2);

  pop();
  pop();

  fill(255);
  textSize(16);
  text("WASD / Oklar: Hareket | Boşluk: Zıpla",20,30);
}

function windowResized(){
  resizeCanvas(windowWidth,windowHeight);
}
</script>
</body>
</html>
