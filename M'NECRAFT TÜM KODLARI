  if(b.type=="break")  fill(255,180,100);
  if(b.type=="lava")   fill(255,80,0);

  rect(b.x, b.y, b.w, b.h, 6);

  // √úST√úNE BASMA
  if(
    p.x > b.x && p.x < b.x+b.w &&
    p.y+10 >= b.y && p.y+10 <= b.y+b.h &&
    p.z <= 0
  ){
    p.y = b.y-10;
    p.vz = 0;

    // KIRILAN BLOK
